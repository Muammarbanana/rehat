<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F4FA"
        tools:context=".RincianPersetujuan">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toTopOf="@+id/guideline251"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/imgBackRincian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ikon_panah_kembali_ke_halaman_sebelumnya"
            app:layout_constraintBottom_toTopOf="@+id/guideline251"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_small_arrow" />

    <TextView
            android:id="@+id/titleRincian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Rincian Pertemuan"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline251"
            app:layout_constraintStart_toEndOf="@+id/imgBackRincian"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline251"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0779" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline252"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1347" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline253"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7353" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline254"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7922" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline255"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8636" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline256"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8831" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline257"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9545" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline258"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0444" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline259"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9566" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/half_rounded_background_white"
            android:elevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline253"
            app:layout_constraintEnd_toStartOf="@+id/guideline259"
            app:layout_constraintStart_toStartOf="@+id/guideline258"
            app:layout_constraintTop_toTopOf="@+id/guideline252">

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline260"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1230" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline261"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2108" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline262"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2324" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline264"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.939" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline263"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.0609" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline265"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp"
                app:layout_constraintGuide_percent="0.7702" />

        <TextView
                android:id="@+id/rincianNamaKonselor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/nama_konselor"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/guideline260"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/rincianNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/nama_pengguna"
                android:textColor="@color/colorDarkBlue"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline261"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline263"
                app:layout_constraintTop_toTopOf="@+id/guideline260"
                app:layout_constraintVertical_bias="1.0" />

        <TextView
                android:id="@+id/rincianPesan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Contoh Pesan"
                android:textColor="@color/colorDarkBlue"
                android:textSize="12sp"
                android:justificationMode="inter_word"
                app:layout_constraintBottom_toTopOf="@+id/guideline265"
                app:layout_constraintEnd_toStartOf="@+id/guideline264"
                app:layout_constraintStart_toStartOf="@+id/guideline263"
                app:layout_constraintTop_toTopOf="@+id/guideline262" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
            android:id="@+id/btnAturUlang"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_button_green_borderless"
            android:text="Atur Ulang Jadwal"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/guideline255"
            app:layout_constraintEnd_toStartOf="@+id/guideline259"
            app:layout_constraintStart_toStartOf="@+id/guideline258"
            app:layout_constraintTop_toTopOf="@+id/guideline254" />

    <Button
            android:id="@+id/btnLihatMaps"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_button_green_borderless"
            android:text="Lihat Maps"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline257"
            app:layout_constraintEnd_toStartOf="@+id/guideline259"
            app:layout_constraintStart_toStartOf="@+id/guideline258"
            app:layout_constraintTop_toTopOf="@+id/guideline256" />

</androidx.constraintlayout.widget.ConstraintLayout>