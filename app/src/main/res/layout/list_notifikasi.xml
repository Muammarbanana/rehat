<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constListNotifikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notifImage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/user1"
            android:visibility="visible"
            app:civ_border_color="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/notifInfo">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
            android:id="@+id/notifInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/nama_pengguna"
            android:textColor="@color/colorDarkBlue"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/notifImage"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/notifWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Beberapa detik yang lalu"
            android:textColor="#7A7A7A"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/notifInfo"
            app:layout_constraintTop_toBottomOf="@+id/notifInfo" />

    <ImageView
            android:id="@+id/notifImageMateri"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="7dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/notifInfo"
            app:srcCompat="@drawable/user1" />

</androidx.constraintlayout.widget.ConstraintLayout>